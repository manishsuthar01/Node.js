<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
</head>

<body>
  <h1>Welcome to URL Shortener</h1>

  <form action="/url" method="POST">
    <input type="url" name="url" placeholder="Enter URL to shorten" required>
    <button type="submit">Shorten</button>
  </form>

  <% if (url) { %>
    <div>
      <h2>Your shortened URL:</h2>
      <a href="http://localhost:8001/url/<%= url %>" target="_blank">
        http://localhost:8001/url/<%= url %>
      </a>
    </div>
  <% } %>

  <% if (urls && urls.length > 0) { %>
    <div>
      <h2>All Shortened URLs</h2>
      <table border="1" cellpadding="5" cellspacing="0">
        <thead>
          <tr>
            <th>S.No</th>
            <th>ShortId</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a href="http://localhost:8001/url/<%= item.shortId %>" target="_blank">
                  <%= item.shortId %>
                </a>
              </td>
              <td><%= item.redirectURL %></td>
              <td><%= item.visitHistory.length %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>         
  <% } %>
</body>

</html>
